# MyDayHub Environment Configuration
# Copy this file to .env and fill in your actual values

# Development Mode
DEV_MODE=true

# Application URL (auto-detected if not set)
APP_URL=http://localhost

# Database Configuration
DB_HOST=localhost
DB_NAME=mydayhub
DB_USER=your_db_user
DB_PASS=your_db_password

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_PORT=587
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=MyDayHub

# Admin Emails (comma-separated)
ADMIN_EMAILS=admin@example.com,admin2@example.com

# SSL Certificate Paths (for HTTPS setup)
# These should point to your SSL certificate files outside the web root
SSL_CERT_PATH=/path/to/your/ssl/certificate.crt
SSL_KEY_PATH=/path/to/your/ssl/private.key
SSL_CSR_PATH=/path/to/your/ssl/certificate.csr

# Security Note:
# - Never commit .env files to version control
# - Keep SSL certificates outside the web root directory
# - Use strong passwords and secure file permissions
