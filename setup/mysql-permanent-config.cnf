# MySQL Configuration for MyDayHub
# Location: /opt/homebrew/etc/my.cnf
# This configuration removes ONLY_FULL_GROUP_BY from sql_mode permanently

[mysqld]
# Remove ONLY_FULL_GROUP_BY to allow flexible GROUP BY queries
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

# Only allow connections from localhost (security)
bind-address = 127.0.0.1
mysqlx-bind-address = 127.0.0.1

# Performance optimizations
max_connections = 200
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M

# Character set settings
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[client]
default-character-set = utf8mb4

